#!/bin/sh
set -e

PKGNAME="r4vk-speedtest"

ETC_DIR="/var/packages/${PKGNAME}/etc"
mkdir -p "${ETC_DIR}"

CONFIG_FILE="${ETC_DIR}/config.env"
if [ ! -f "${CONFIG_FILE}" ]; then
  cat > "${CONFIG_FILE}" <<'EOF'
# r4vk-speedtest package config
HOST_PORT=8000
CONTAINER_NAME=r4vk-speedtest
VOLUME_NAME=r4vk-speedtest-data
EOF
fi

exit 0
